@model Monarch.Models.ButterflyTrackingContext.SightingFileUpload

@{
    ViewBag.Title = "Upload a Sightings Batch File";
}

<h2>Upload a Sightings Batch File</h2>

@using (Html.BeginForm("Index", "SightingFileUploads", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SightingsFileUpload</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("FileUpload", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="FileUpload" name="upload" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
